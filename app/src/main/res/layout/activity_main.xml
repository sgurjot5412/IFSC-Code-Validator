<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/headingIFSC"
        android:textAlignment="center"
        android:text="IFSC Code Validator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:textColor="@color/purple_500"
        android:textSize="25dp"
        android:fontFamily="serif-monospace"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIFSCcode"
        app:layout_constraintTop_toBottomOf="@id/headingIFSC"
        app:layout_constraintBottom_toTopOf="@id/ButtonBankDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter IFSC code"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonBankDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="30dp"
        android:text="Get Bank Details"
        app:layout_constraintTop_toBottomOf="@id/editTextIFSCcode"
        app:layout_constraintBottom_toTopOf="@id/textViewBankDetails"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBankDetails"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ButtonBankDetails"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:padding="10dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
